generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id       String  @id @default(uuid())
  name     String
  email    String
  password String
  notes    Notes[]
  links    Links[]
}

model Notes {
  id       String  @id @default(uuid())
  subject  String
  title    String
  subTitle String?
  content  String
  createdAt DateTime @default(now())
  user     User?   @relation(fields: [userId], references: [id])
  userId   String?
}

model Links {
  id String @id @default(uuid())
  title String
  link String
  category String
  createdAt DateTime @default(now())
  user   User?   @relation(fields: [userId], references: [id])
  userId String?
}

model Category {
  id String @id @default(uuid())
  catName String
}

model Subject {
  id      String @id @default(uuid())
  subName String
}
